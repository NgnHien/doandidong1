<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".activities.HomeActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/bannerViewPager"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <!-- Dấu chấm hình tròn -->
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/gray"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/bannerViewPager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bannerViewPager">

        <!-- Các dấu chấm nhỏ -->
        <ImageView
            android:id="@+id/dot1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="5dp"
            android:src="@drawable/bo_tron_trang" />

        <ImageView
            android:id="@+id/dot2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="5dp"
            android:src="@drawable/bo_tron_trang" />

        <ImageView
            android:id="@+id/dot3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="5dp"
            android:src="@drawable/bo_tron_trang" />

        <ImageView
            android:id="@+id/dot4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="5dp"
            android:src="@drawable/bo_tron_trang" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <LinearLayout
            android:id="@+id/lythuyet"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/khung_tp_home"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/lithuyet"
                android:padding="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Lý Thuyết"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bienbao"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/khung_tp_home"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/warning_sign"
                android:paddingHorizontal="25dp"
                android:paddingTop="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Biển báo"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thisathach"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/khung_tp_home"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/exam"
                android:padding="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Thi Thử"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.752">

        <LinearLayout
            android:id="@+id/meothi"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/khung_tp_home"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/meo"
                android:padding="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Mẹo Thi"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Causai"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/khung_tp_home"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/delete"
                android:padding="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Các câu sai"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Causai2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"

            android:background="@drawable/khung_tp_home"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/book"
                android:padding="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Làm đề"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
